{% import "_includes/forms" as forms %}

{% includeCssResource "hopalertsfetch/css/HopAlertsFetch_Style.css" %}
{% includeJsResource "hopalertsfetch/js/HopAlertsFetch_Script.js" %}

{{ forms.textField({
    label: 'Refresh Time',
    instructions: 'Time in seconds before refreshing all alerts (default: 5 min)',
    id: 'time_refresh',
    name: 'time_refresh', 
    value: settings['time_refresh']})
}}

{{ forms.textField({
    label: 'Expiration Time',
    instructions: 'Time in seconds before setting an alert as expired (default: 12 hrs)',
    id: 'time_expired',
    name: 'time_expired', 
    value: settings['time_expired']})
}}

{{ forms.textField({
    label: 'WMATA API Key',
    instructions: 'API key to retrieve data from https://developer.wmata.com',
    id: 'wmata_api_key',
    name: 'wmata_api_key', 
    value: settings['wmata_api_key']})
}}

{{ forms.textField({
    label: 'Twitter oauth access token',
    instructions: 'To get from https://apps.twitter.com/',
    id: 'twitter_oauth_access_token',
    name: 'twitter_oauth_access_token', 
    value: settings['twitter_oauth_access_token']})
}}

{{ forms.textField({
    label: 'Twitter oauth access token secret',
    instructions: 'To get from https://apps.twitter.com/',
    id: 'twitter_oauth_access_token_secret',
    name: 'twitter_oauth_access_token_secret', 
    value: settings['twitter_oauth_access_token_secret']})
}}

{{ forms.textField({
    label: 'Twitter consumer key',
    instructions: 'To get from https://apps.twitter.com/',
    id: 'twitter_consumer_key',
    name: 'twitter_consumer_key', 
    value: settings['twitter_consumer_key']})
}}

{{ forms.textField({
    label: 'Twitter consumer secret',
    instructions: 'To get from https://apps.twitter.com/',
    id: 'twitter_consumer_secret',
    name: 'twitter_consumer_secret', 
    value: settings['twitter_consumer_secret']})
}}